{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Data": {
    "ConnectionStrings": {
      //"DefaultConnection": "server = localhost\\SQLEXPRESS; Database=AM; Trusted_Connection=true; Integrated Security=SSPI; persist security info = true;"
      "DefaultConnection": "Data Source=(localdb)\\ProjectModels;Database=AM;Integrated Security=True;"
    }
  },
  "Okta": {
    "Audience": "api://default",
    "Authority": "https://dev-10185641.okta.com/oauth2/default"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.txt",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
